{
  "name": "witnesschain",
  "version": "0.1.0",
  "private": true,
  "description": "Decentralized Human Rights Evidence Platform using Filecoin",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "validate": "pnpm --filter @witnesschain/validation validate:all"
  },
  "keywords": [
    "filecoin",
    "fvm",
    "human-rights",
    "evidence",
    "decentralized",
    "blockchain",
    "synapse-sdk",
    "storacha",
    "ucan",
    "privacy"
  ],
  "author": "Hany Almnaem",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hany-Almnaem/witnesschain.git"
  },
  "bugs": {
    "url": "https://github.com/Hany-Almnaem/witnesschain/issues"
  },
  "homepage": "https://github.com/Hany-Almnaem/witnesschain#readme"
}
