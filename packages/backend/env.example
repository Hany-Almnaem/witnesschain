# WitnessChain Backend Environment Variables
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database (for future use)
DATABASE_URL=postgresql://localhost:5432/witnesschain

# IPFS Configuration
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_API_URL=http://localhost:5001

# Filecoin Configuration
FILECOIN_RPC_URL=https://api.node.glif.io/rpc/v0
FILECOIN_NETWORK=testnet

# Web3.storage (for simplified IPFS access)
WEB3_STORAGE_TOKEN=web3_storage_token_here

# Encryption
ENCRYPTION_KEY_SECRET=encryption_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
