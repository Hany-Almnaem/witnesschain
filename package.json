{
  "name": "witnesschain",
  "version": "0.1.0",
  "description": "Decentralized Human Rights Evidence Platform using Filecoin, IPFS, and blockchain technology",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && cd packages/backend && npm install && cd ../frontend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm test",
    "test:frontend": "cd packages/frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:frontend": "cd packages/frontend && npm run lint"
  },
  "keywords": [
    "filecoin",
    "ipfs",
    "human-rights",
    "evidence",
    "decentralized",
    "blockchain",
    "fvm",
    "drand",
    "storacha",
    "privacy",
    "censorship-resistant"
  ],
  "author": "Hany Almnaem",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hany-Almnaem/witnesschain.git"
  },
  "bugs": {
    "url": "https://github.com/Hany-Almnaem/witnesschain/issues"
  },
  "homepage": "https://github.com/Hany-Almnaem/witnesschain#readme"
}
