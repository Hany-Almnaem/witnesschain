{
  "name": "@witnesschain/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run --exclude '**/*.integration.test.ts'",
    "test:watch": "vitest --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run src/lib/storage.integration.test.ts",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@filoz/synapse-sdk": "^0.36.1",
    "@hono/node-server": "^1.13.0",
    "@hono/zod-validator": "^0.4.0",
    "@ipld/dag-ucan": "^3.4.0",
    "@libsql/client": "^0.14.0",
    "@ucanto/core": "^10.0.1",
    "@ucanto/principal": "^9.0.1",
    "@witnesschain/shared": "workspace:*",
    "drizzle-orm": "^0.36.0",
    "ethers": "^6.13.4",
    "hono": "^4.6.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^11.0.0",
    "viem": "^2.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@witnesschain/config": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.6",
    "@vitest/coverage-v8": "^2.1.6"
  }
}
